<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="환경설정"
        android:textSize="30sp"
        android:letterSpacing="0.1"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:id="@+id/UserTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="30dp"
        android:columnCount="5">

        <View
            android:id="@+id/userIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/user_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/user"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="개인정보"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/user_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/UserTab"
        android:background="#DDDDDD" />

    <GridLayout
        android:id="@+id/AccessibilityTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserTab"
        android:layout_marginTop="20dp"
        android:columnCount="5">

        <View
            android:id="@+id/accessibilityIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/accessibility_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/accessibility"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="접근성"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/accessibility_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/AccessibilityTab"
        android:background="#DDDDDD" />

    <GridLayout
        android:id="@+id/LanguageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AccessibilityTab"
        android:layout_marginTop="20dp"
        android:columnCount="5">

        <View
            android:id="@+id/languageIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/language_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/language"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="언어"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/language_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/LanguageTab"
        android:background="#DDDDDD" />

    <GridLayout
        android:id="@+id/SecurityTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LanguageTab"
        android:layout_marginTop="20dp"
        android:columnCount="5">

        <View
            android:id="@+id/securityIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/security_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/security"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="보안"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/security_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/SecurityTab"
        android:background="#AAAAAA" />

    <GridLayout
        android:id="@+id/InformationTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SecurityTab"
        android:layout_marginTop="24dp"
        android:columnCount="5">

        <View
            android:id="@+id/informationIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/information_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/information"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="정보"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/information_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/InformationTab"
        android:background="#DDDDDD" />

    <GridLayout
        android:id="@+id/FeedbackTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/InformationTab"
        android:layout_marginTop="20dp"
        android:columnCount="5">

        <View
            android:id="@+id/feedbackIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/comments_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/feddback"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="피드백 보내기"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"/>

        <Button
            android:id="@+id/feedback_btn"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_icon"
            android:layout_margin="3dp"/>

    </GridLayout>






