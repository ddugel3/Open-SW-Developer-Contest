<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    tools:context=".PersonalActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="개인정보"
        android:textSize="30sp"
        android:letterSpacing="0.1"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:text="홍길동"
        android:textColor="#999999"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/birthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/nameValue"
        app:layout_constraintRight_toRightOf="parent"
        android:text="010203"
        android:textColor="#999999"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/birth"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/birth"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/genderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/birthValue"
        app:layout_constraintRight_toRightOf="parent"
        android:text="남"
        android:textColor="#999999"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gender"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/gender"
        android:text="연락처"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/phoneValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/genderValue"
        app:layout_constraintRight_toRightOf="parent"
        android:text="010-1234-5678"
        android:textColor="#999999"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/emailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/phoneValue"
        app:layout_constraintRight_toRightOf="parent"
        android:text="vaba@example.com"
        android:textColor="#999999"
        android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>